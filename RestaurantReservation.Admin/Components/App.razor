@inject IHostEnvironment Env

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="@Assets["css/bootstrap/bootstrap.min.css"]" />

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    <link href=@Assets["css/fluent.css"]" rel="stylesheet" />
    <link rel="stylesheet" href="@Assets["css/app.css"]" />
    <link href="@Assets["css/site.css"]" rel="stylesheet" />
    <link rel="stylesheet" href="@Assets["RestaurantReservation.Admin.styles.css"]" />


    <ImportMap />
    <HeadOutlet @rendermode="new InteractiveServerRenderMode(prerender: false)" />
</head>

<body>
    <Routes @rendermode="new InteractiveServerRenderMode(prerender: false)" />
    <div id="blazor-error-ui">
        @if (Env.IsDevelopment())
        {
            <text>
                An unhandled exception has occurred. See browser dev tools for details.
            </text>
        }
        else
        {
            <text>
                An error has occurred. This app may no longer respond until reloaded.
            </text>
        }
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
    <script src="_framework/blazor.web.js"></script>
    <script>
        Blazor.start({
            reconnectionOptions: {
                maxRetries: 10,
                retryIntervalMilliseconds: 8000
            }
        });
    </script>
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
    @* <script src="https://cdn.syncfusion.com/blazor/31.2.5/syncfusion-blazor.min.js" type="text/javascript"></script> *@
    <script src="@Assets["js/site.js"]"></script>
    <script src="@Assets["js/reporting_viewercustomization.js"]"></script>
    <script src="@Assets["js/excel_export.js"]"></script>
    <script src="@Assets["js/syncfusion-blazor.min.js"]"></script>

</body>

</html>
