@using Microsoft.AspNetCore.Components.Authorization
<AuthorizeView>
    <Authorized>
        <MudMenu Icon="@Icons.Material.Filled.MoreVert"
                 Color="Color.Inherit"
                 AnchorOrigin="Origin.BottomLeft">
            <MudMenuItem Href="@LogoutLinkAddress">
                <span>
                    <MudIcon Icon="@Icons.Material.Filled.Logout" />
                    Logout
                </span>
            </MudMenuItem>
            <MudMenuItem Href="@ResetPasswordLinkAddress">
                <span><MudIcon Icon="@Icons.Material.Filled.Password" /> Reset Password</span>
            </MudMenuItem>
        </MudMenu>
    </Authorized>
    <NotAuthorized>
        <MudIconButton Href="@LoginLinkAddress"
                       Icon="@Icons.Material.Filled.Login"
                       Color="Color.Inherit"
                       Edge="Edge.End" />
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter]
    public string LoginLinkAddress { get; set; } = "/";
    [Parameter]
    public string LogoutLinkAddress { get; set; } = "/";
    [Parameter]
    public string ResetPasswordLinkAddress { get; set; } = "/";
}