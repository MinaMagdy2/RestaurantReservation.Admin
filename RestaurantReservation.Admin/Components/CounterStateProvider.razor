@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using SamSoft.Common
@inject ProtectedSessionStorage ProtectedSessionStore

@if (isLoaded)
{
    <CascadingValue Value="this">
        @ChildContent
    </CascadingValue>
}
else
{
    <SpinKitChasingDots />
}

@code {
    private bool isLoaded;
    private const string AccessToken = "access_token";
    private const string RefreshToken = "refresh_Token";
    private const string ExpirationOn = "expiration_on";
    private const string UserName = "user_name";
    private const string TenantId = "tenant_id";

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    public TokenResponse CurrentToken { get; set; } = null!;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            isLoaded = true;
            await LoadStateAsync();
            StateHasChanged();
        }
    }

    private async Task LoadStateAsync()
    {
        var result = await ProtectedSessionStore.GetAsync<TokenResponse>("count");
        CurrentToken = result.Success ? result.Value : null;
        isLoaded = true;
    }

    public async Task IncrementCount()
    {

        await ProtectedSessionStore.SetAsync("count", CurrentToken);
    }
}